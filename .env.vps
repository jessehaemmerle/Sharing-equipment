# VPS Production Environment Variables for Toala.at
# Copy this to .env and update the values for your VPS deployment

# Domain Configuration
DOMAIN=toala.yourdomain.com
SSL_EMAIL=admin@yourdomain.com

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_here_change_this_in_production

# Database Configuration
MONGO_URL=mongodb://mongodb:27017
DB_NAME=toala_database

# Application Configuration
ENVIRONMENT=production
DEBUG=false

# Reverse Proxy Configuration
PROXY_TYPE=traefik
# Options: traefik, nginx-proxy, manual

# Backup Configuration (Optional)
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30

# Network Configuration
PROXY_NETWORK=traefik
# For nginx-proxy use: nginx-proxy
# For manual setup use: proxy_network
